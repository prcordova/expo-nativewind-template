{
  "expo": {
    "name": "melter-app",
    "slug": "melter-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/logo.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "plugins": [
      [
        "expo-media-library",
        {
          "photosPermission": "O Melter precisa acessar suas fotos para postar no feed.",
          "savePhotosPermission": "O Melter precisa salvar fotos.",
          "isAccessMediaLocationEnabled": true
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "O Melter precisa acessar sua câmera para tirar fotos."
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/logo.png",
          "color": "#B63385"
        }
      ]
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.melter.app",
      "infoPlist": {
        "NSCameraUsageDescription": "O Melter precisa acessar sua câmera para tirar fotos e postar no feed.",
        "NSPhotoLibraryUsageDescription": "O Melter precisa acessar sua galeria para você escolher fotos e postar no feed.",
        "NSPhotoLibraryAddUsageDescription": "O Melter precisa salvar fotos na sua galeria.",
        "NSMicrophoneUsageDescription": "O Melter precisa acessar seu microfone para gravar vídeos."
      }
    },
    "android": {
      "package": "com.melter.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/logo.png",
        "backgroundColor": "#FFFFFF"
      },
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.READ_MEDIA_IMAGES",
        "android.permission.READ_MEDIA_VIDEO",
        "android.permission.RECEIVE_BOOT_COMPLETED",
        "android.permission.VIBRATE",
        "android.permission.POST_NOTIFICATIONS"
      ]
    },
    "web": {
      "favicon": "./assets/logo.png"
    }
  }
}
